<Window x:Class="Demo_practice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_practice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="200" MinWidth="400">
    <Grid>
        <DataGrid x:Name="DataGrid" Margin="150,50,10,10" SelectionChanged="DataGrid_SelectionChanged" />
        <Button x:Name="delete_btn" Content="Удали нахуй" HorizontalAlignment="Left" Margin="65,50,0,0" VerticalAlignment="Top" Click="delete_btn_Click"/>
        <Button x:Name="update_btn" Content="Обнови нахуй" HorizontalAlignment="Left" Margin="65,93,0,0" VerticalAlignment="Top" Click="update_btn_Click"/>
        <Button x:Name="add_btn" Content="Добавь нахуй" HorizontalAlignment="Left" Margin="65,136,0,0" VerticalAlignment="Top" Click="add_btn_Click"/>

    </Grid>
</Window>
